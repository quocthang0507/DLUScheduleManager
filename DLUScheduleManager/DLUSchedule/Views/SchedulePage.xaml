<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
			 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
			 xmlns:resource ="clr-namespace:DLUSchedule.Properties"
			 xmlns:syncfusion="clr-namespace:Syncfusion.SfDataGrid.XForms;assembly=Syncfusion.SfDataGrid.XForms"
			 x:Class="DLUSchedule.Views.SchedulePage"
			 xmlns:vm="clr-namespace:DLUSchedule.ViewModels" x:DataType="vm:ScheduleViewModel"
			 Title="{x:Static resource:Resources.Title}" >

	<ContentPage.BindingContext>
		<vm:ScheduleViewModel />
	</ContentPage.BindingContext>

	<ContentPage.Resources>
		<ResourceDictionary>
			<Color x:Key="Accent">#96d1ff</Color>
			<Color x:Key="Header">#96d1ff</Color>
		</ResourceDictionary>
	</ContentPage.Resources>

	<ContentPage.Content>
		<!--<syncfusion:SfDataGrid x:Name="gridSchedule" ItemsSource="{Binding Schedule}">-->
		<syncfusion:SfDataGrid x:Name="gridSchedule" 
			VerticalOptions="FillAndExpand"
			CanMaintainScrollPosition="True"
			SelectionMode="Single" ColumnSizer="Star"
			VerticalOverScrollMode="Bounce">
		</syncfusion:SfDataGrid>
	</ContentPage.Content>
</ContentPage>